<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="guest-pane" stylesheets="@assets/css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seneca.apd.finalproject.hotelreservation.Controller.GuestDetailController">
    <children>
        <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="CENTER" spacing="5">
                <Label styleClass="title-label-kiosk" text="Tell us a bit about yourself!">
                    <VBox.margin>
                        <Insets top="30.0" bottom="5.0"/>
                    </VBox.margin>
                </Label>

                <Label styleClass="subtext-label-kiosk" text="Enter your contact details so we can reserve your stay">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
            </VBox>

            <VBox alignment="CENTER" spacing="15">
                <HBox alignment="CENTER" spacing="10">
                    <Label styleClass="small-label" text="Full Name:" />
                    <TextField fx:id="nameField" promptText="Enter full name" styleClass="input-field" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label styleClass="small-label" text="Phone number:" />
                    <TextField fx:id="phoneField" promptText="Enter phone number" styleClass="input-field" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label styleClass="small-label" text="Email Address:" />
                    <TextField fx:id="emailField" promptText="Enter email" styleClass="input-field" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label styleClass="small-label" text="Address:" />
                    <TextField fx:id="addressField" promptText="Enter address" styleClass="input-field" />
                </HBox>
            <VBox.margin>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
            </VBox>

            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#handleMenu" styleClass="bottom-btn-kiosk" text="Menu" />
                <Button onAction="#handlePrevious" styleClass="bottom-btn-kiosk" text="Previous" />
                <Button onAction="#handleNext" styleClass="bottom-btn-kiosk" text="Next" />
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
