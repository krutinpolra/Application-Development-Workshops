<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="guest-pane" stylesheets="@assets/css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seneca.apd.finalproject.hotelreservation.Controller.ListOfGuests">
    <children>
        <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <!-- Title -->
            <Label styleClass="title-label-kiosk" text="List Of Guests" />

            <!-- Search and Table -->
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <TextField fx:id="searchField" prefHeight="25.0" prefWidth="227.0" promptText="Search by Name or phone" styleClass="search-bar">
                  <HBox.margin>
                     <Insets right="20.0" />
                  </HBox.margin></TextField>
                </HBox>
                <TableView fx:id="guestTable" prefHeight="300" prefWidth="800">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Name" />
                        <TableColumn fx:id="phoneColumn" text="Phone" />
                        <TableColumn fx:id="bookingIdColumn" text="Booking ID" />
                        <TableColumn fx:id="roomTypeColumn" text="Room-type" />
                        <TableColumn fx:id="checkInColumn" text="Check-in" />
                        <TableColumn fx:id="checkOutColumn" text="Check-out" />
                        <TableColumn fx:id="totalPriceColumn" text="Total Price" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
                </TableView>
            </VBox>

            <!-- Bottom Buttons -->
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#handleMenu" styleClass="bottom-btn-kiosk" text="Menu" />
                <Button onAction="#handleCheckOut" styleClass="bottom-btn-kiosk" text="Check-out" />
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
