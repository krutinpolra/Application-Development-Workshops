            <VBox.margin>
               <Insets bottom="20.0" left="20.0" right="20.0" />
            </VBox.margin>
            </GridPane>
            <Button onAction="#handleMenu" styleClass="bottom-btn-kiosk" text="Menu"></Button>
        </VBox>
    </children>
</AnchorPane>
