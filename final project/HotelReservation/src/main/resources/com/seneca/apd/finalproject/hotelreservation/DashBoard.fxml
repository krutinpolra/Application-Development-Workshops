                <!-- Buttons -->
                <Button fx:id="bookRoomButton" onAction="#handleBookRoom" prefHeight="250.0" prefWidth="250.0" styleClass="dashboard-btn" GridPane.columnIndex="0" GridPane.rowIndex="0">
